

<div class="container " style="margin-top: 30px; padding: 40px;">

  <div class="row">
    <div class="col-12 col-lg-2" style="padding-bottom: 10px">
       <% @desks.each do |desk|%>
       <div class="card" style="width: 6rem;" alt="..." data-toggle="modal" data-target="#desk<%=desk.id %>">
  <%= cl_image_tag desk.photo, class: "card-img-top" %>
  <div class="card-body">
    <p class="card-text" style="color: <%= desk.color %>"><%= desk.color %></p>
  </div>
</div>

<% end %>

</div>
    <div class="col-12 col-lg-10" style="padding-top: 0px">
      <div id="calendar">
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<% @desks.each do |desk|%>
<div class="modal fade" id="desk<%=desk.id %>" tabindex="-1" role="dialog" aria-labelledby="<%=desk.id %>Label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%=desk.id %>Label">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for desk do |f| %>
          <%= f.input :photo %>

          <button type="submit" class="btn btn-primary">Modifier la photo du <%= desk.color %></button>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
<% end %>







